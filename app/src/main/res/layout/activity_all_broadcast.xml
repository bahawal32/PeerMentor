<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllBroadcast">

    <LinearLayout
        android:id="@+id/superlayout"
        android:layout_width="395dp"
        android:layout_height="706dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/UserName"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center" />

        <Button
            android:id="@+id/AddRequest"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="Button" />

        <RadioGroup
            android:id="@+id/RGroup"
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp">

            <RadioButton
                android:id="@+id/Tutor"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Tutor"
                android:textAlignment="viewStart" />

            <RadioButton
                android:id="@+id/Stationary"
                android:layout_width="118dp"
                android:layout_height="wrap_content"

                android:text="stationary" />

            <RadioButton
                android:id="@+id/carpool"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:text="carpool" />

        </RadioGroup>

        <ScrollView
            android:id="@+id/scrollparent"
            android:layout_width="369dp"
            android:layout_height="432dp">


            <LinearLayout
                android:id="@+id/UsersBroadcasts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:clipChildren="true"

                android:dividerPadding="10dp"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp" />

        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>